<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#32022E"
    tools:context=".ui.MainActivity">

    <!-- Top Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#000000"
        android:padding="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Menu Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_sort_by_size"
            android:layout_marginEnd="10dp"/>

        <!-- Search Bar -->
        <EditText
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:background="@android:drawable/editbox_background"
            android:hint="Search..."
            android:padding="8dp"
            android:textColorHint="#CCCCCC"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/btn_profile"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="10dp"
            android:background="@android:drawable/ic_menu_myplaces"
            android:tint="#FFFFFF"
            android:scaleType="centerCrop"/>
    </LinearLayout>

    <!-- Title Section -->
    <TextView
        android:id="@+id/titleMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="THIS WEEKS WORKOUTS:"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Workouts"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>

    <!-- Workout Image Placeholder -->
    <ImageView
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:background="#FFFFFF"
        android:scaleType="centerInside"
        android:src="@android:drawable/ic_menu_gallery"
        android:layout_marginBottom="20dp"/>

    <!-- Workout Buttons -->
    <Button
        android:id="@+id/btn_push"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Push"
        android:textStyle="bold"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btn_pull"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Pull"
        android:textStyle="bold"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"/>

    <Button
        android:id="@+id/btn_legs"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Legs"
        android:textStyle="bold"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"/>

    <!-- Second Workout Image Placeholder -->
    <ImageView
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:background="#FFFFFF"
        android:scaleType="centerInside"
        android:src="@android:drawable/ic_menu_gallery"
        android:layout_marginBottom="20dp"/>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#000000"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp">

        <Button
            android:id="@+id/leaderboard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Leaderboard"
            android:textSize="12sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:gravity="center"
            android:padding="4dp"
            />

        <Button
            android:id="@+id/social"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Social"
            android:textSize="12sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:gravity="center"
            android:padding="4dp"
            />

        <Button
            android:id="@+id/achievements"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Achievements"
            android:maxLines="2"
            android:ellipsize="end"
            android:gravity="center"
            android:padding="4dp"
            />

        <Button
            android:id="@+id/blacklist"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Blacklist"
            android:maxLines="2"
            android:ellipsize="end"
            android:gravity="center"
            android:padding="4dp"
            />

    </LinearLayout>
</LinearLayout>
