<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    android:background="#32022E"
    android:id="@+id/main">

    <!-- Title -->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="340dp"
        android:layout_height="279dp"
        app:srcCompat="@drawable/hand_with_a_dumbbell" />

    <TextView
        android:id="@+id/Welcome"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:ems="10"
        android:inputType="text"
        android:text="Welcome to Track and Fit!"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="30sp" /> />

    <TextView
        android:id="@+id/PleaseLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Please Login or Sign Up"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <!-- Email Input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Login / Sign Up"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@android:drawable/editbox_background"
        android:hint="Enter Email"
        android:padding="10dp"
        android:textColor="#000000"
        android:textColorHint="#CCCCCC" />

    <!-- Password Input -->
    <EditText
        android:id="@+id/et_password"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@android:drawable/editbox_background"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="#000000"
        android:textColorHint="#CCCCCC" />

    <!-- Login Button -->
    <Button
        android:id="@+id/LogBut"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:text="Log in"
        android:textStyle="bold" />

    <!-- Signup Button -->
    <Button
        android:id="@+id/SignBut"
        android:layout_width="204dp"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:textStyle="bold" />

</LinearLayout>
