<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/socialbkg">

    <LinearLayout
        android:layout_width="398dp"
        android:layout_height="451dp"
        android:layout_marginStart="9dp"
        android:layout_marginTop="304dp"
        android:layout_marginEnd="9dp"
        android:background="@drawable/white_background"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/userList1"
            android:layout_width="370dp"
            android:layout_height="110dp"
            android:orientation="horizontal"
            android:visibility="visible"
            tools:visibility="visible">

            <TextView
                android:id="@+id/user1"
                android:layout_width="254dp"
                android:layout_height="46dp"
                android:layout_marginStart="0dp"
                android:layout_marginEnd="0dp"
                android:layout_weight="0"
                android:fontFamily="sans-serif"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:orientation="vertical">

                <Button
                    android:id="@+id/view1"
                    android:layout_width="116dp"
                    android:layout_height="65dp"
                    android:text="View Profile" />

            </LinearLayout>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/appCompatImageView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:alpha="0.5"
            android:background="@color/lavender" />

        <LinearLayout
            android:id="@+id/userList2"
            android:layout_width="370dp"
            android:layout_height="110dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user2"
                android:layout_width="254dp"
                android:layout_height="46dp"
                android:fontFamily="sans-serif"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/view2"
                    android:layout_width="116dp"
                    android:layout_height="65dp"
                    android:text="View Profile" />

            </LinearLayout>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/appCompatImageView2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:layout_weight="0"
            android:alpha="0.5"
            android:background="@color/lavender" />

        <LinearLayout
            android:id="@+id/userList3"
            android:layout_width="370dp"
            android:layout_height="110dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user3"
                android:layout_width="254dp"
                android:layout_height="46dp"
                android:layout_weight="0"
                android:fontFamily="sans-serif"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:orientation="vertical">

                <Button
                    android:id="@+id/view3"
                    android:layout_width="116dp"
                    android:layout_height="65dp"
                    android:text="View Profile"
                    tools:ignore="MissingConstraints" />

            </LinearLayout>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/appCompatImageView4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:alpha="0.5"
            android:background="@color/lavender" />

    </LinearLayout>

    <TextView
        android:id="@+id/friendsTitle"
        android:layout_width="195dp"
        android:layout_height="87dp"
        android:layout_marginStart="107dp"
        android:layout_marginTop="144dp"
        android:layout_marginEnd="108dp"
        android:text="Search Users"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="32sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="167dp"
        android:layout_height="118dp"
        android:layout_marginStart="122dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="122dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hand_with_a_dumbbell" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="305dp"
        android:layout_height="45dp"
        android:layout_marginTop="228dp"
        app:layout_constraintStart_toEndOf="@+id/searchbtn"
        app:layout_constraintTop_toTopOf="parent">

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/searchBar"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginStart="104dp"
        android:layout_marginTop="232dp"
        android:hint="Search..."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/searchbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="232dp"
        android:layout_marginEnd="308dp"
        android:text="Search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/homeButton"
        android:layout_width="235dp"
        android:layout_height="71dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="776dp"
        android:text="Back to Workout"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>